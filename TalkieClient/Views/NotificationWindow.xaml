<Window x:Class="TalkieClient.Views.NotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Notification" Height="200" Width="400" WindowStyle="ToolWindow" ResizeMode="NoResize" Topmost="True">
    <Grid>
        <StackPanel>
            <TextBlock x:Name="TitleTextBlock" FontWeight="Bold" FontSize="16" Margin="10"/>
            <TextBlock x:Name="MessageTextBlock" FontSize="14" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>

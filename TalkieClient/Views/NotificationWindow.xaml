<Window x:Class="TalkieClient.Views.NotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Notification" 
        Height="100" 
        Width="300" 
        WindowStyle="None" 
        ResizeMode="NoResize" 
        Topmost="True"
        AllowsTransparency="True"
        Background="#F9FAFC"
        Opacity="0.9"
        ShowInTaskbar="False">

    <Grid>
        <StackPanel>
            <TextBlock x:Name="TitleTextBlock" 
                       FontWeight="Bold" 
                       FontSize="18" 
                       Foreground="#4A90E2"
                       Margin="10,10,10,0" 
                       TextAlignment="Center"/>

            <TextBlock x:Name="MessageTextBlock" 
                       FontSize="14" 
                       Margin="10,5,10,0" 
                       TextWrapping="Wrap" 
                       TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>

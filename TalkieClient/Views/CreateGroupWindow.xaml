<Window x:Class="TalkieClient.Views.CreateGroupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Group" Height="400" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Пояснительный текст для TextBox -->
        <TextBlock Text="Enter group name:" Margin="10" VerticalAlignment="Center" />

        <!-- Поле для ввода названия группы -->
        <TextBox x:Name="GroupNameTextBox" Grid.Row="1" Margin="10" />

        <!-- Список пользователей для выбора -->
        <ListBox x:Name="UserSelectionList" Grid.Row="2" Margin="10" SelectionMode="Multiple">
            <!-- Users will be added dynamically -->
        </ListBox>

        <!-- Кнопка для создания группы -->
        <Button Content="Create Group" Grid.Row="3" Margin="10" Click="CreateGroupButton_Click" />
    </Grid>
</Window>

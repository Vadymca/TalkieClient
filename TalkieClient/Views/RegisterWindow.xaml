<Window x:Class="TalkieClient.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TalkieClient.Views"
        mc:Ignorable="d"
        Title="Register" Height="400" Width="400">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
            <TextBlock Text="Username" />
            <TextBox Name="UsernameTextBox" Margin="0,0,0,10" />

            <TextBlock Text="Email" />
            <TextBox Name="EmailTextBox" Margin="0,0,0,10" />

            <TextBlock Text="Password" />
            <PasswordBox Name="PasswordBox" Margin="0,0,0,10" />

            <TextBlock Text="Role" />
            <ComboBox Name="RoleComboBox" Margin="0,0,0,10">
                <ComboBoxItem Content="User" />
                <ComboBoxItem Content="Moderator" />
            </ComboBox>

            <Button Content="Register" Click="RegisterButton_Click" />
        </StackPanel>
    </Grid>
</Window>
